@using KursovaRabota.Models
@model BookViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2" for="">Image</label>
        <div class="col-md-10">
            @if (Model.HasImage)
            {
                <img src="@Url.Content(Model.ImagePath)" width="300" alt="Image for @Model.BookName" />
            }
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="CategoryID">Category</label>
        <div class="col-md-10">
            @Model.CategoryName
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="AuthorID">Author</label>
        <div class="col-md-10">
            @Model.AuthorName
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="BookName">BookName</label>
        <div class="col-md-10">
            @Model.BookName
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" for="Description">Description</label>
        <div class="col-md-10">
            @Model.Description
        </div>
    </div>
</div>